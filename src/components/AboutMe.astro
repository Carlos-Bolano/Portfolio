---
import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const personalImageAlt = "Carlos Bola√±o - Calisto";
---

<article class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row">
  <div
    class="[&>p]:mb-4 [&>p>strong]:text-yellow-500 dark:[&>p>strong]:text-yellow-500 [&>p>strong]:font-medium text-pretty order-2 md:order-1"
  >
    <p set:html={i18n.ABOUT.DESCRIPTION_1} />
    <p set:html={i18n.ABOUT.DESCRIPTION_2} />
    <p set:html={i18n.ABOUT.DESCRIPTION_3} />
  </div>

  <img
    width="240"
    height="220"
    src="/me.webp"
    alt={personalImageAlt}
    class="object-cover rotate-3 md:order-2 w-64 h-full p-1 lg:p-2 lg:w-64 rounded-2xl bg-black/20 dark:bg-yellow-500/5 ring-1 ring-black/70 dark:ring-white/20"
    style="object-position: 50% 50%"
  />
</article>
